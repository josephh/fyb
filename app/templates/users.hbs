<div class="row">
  <div class="col-md-6">
    <img src="/images/fish-on-line-left.svg" class="img-responsive pull-right hidden-xs" alt="Responsive image">
  </div>
  <div class="col-md-6">
    <img src="/images/fish-on-line-right.svg" class="img-responsive pull-left hidden-xs" alt="Responsive image">
  </div>
</div>
<div class="row">
  <section class="login-existing-user">
    <div class="col-md-6 text-center">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2>Already a user? Login with...</h2>
          <div class="clearfix"></div>
          {{#each users.authProviders as |authProvider|}}
            <a class="btn btn-default btn-lg" type="submit"
              {{action 'login' authProvider}}> <!-- note the action should
                be inside the html element-->
             {{authProvider}}</a>
          {{/each}}
        </div>
      </div>
    </div>
  </section>
  <section class="login-existing-user">
    <div class="col-md-6 text-center">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2>Create a user account with...</h2>
          <div class="clearfix"></div>
          <div class="g-signin2" data-onsuccess="onSignIn" data-theme="dark"></div>
          {{#each users.authProviders as |authProvider|}}
            <a class="btn btn-default btn-lg" type="submit"
              {{action 'create' authProvider}}> <!-- note the action should
                be inside the html element-->
             {{authProvider}}</a>
          {{/each}}
          <script>
            function onSignIn(googleUser) {
              // Useful data for your client-side scripts:
              var profile = googleUser.getBasicProfile();
              console.log("ID: " + profile.getId()); // Don't send this directly to your server!
              console.log("Name: " + profile.getName());
              console.log("Image URL: " + profile.getImageUrl());
              console.log("Email: " + profile.getEmail());

              // The ID token you need to pass to your backend:
              var id_token = googleUser.getAuthResponse().id_token;
              console.log("ID Token: " + id_token);
            };
          </script>
        </div>
      </div>
    </div>
  </section>
</div>
{{outlet}}
