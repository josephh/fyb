            zoom=12 as |context|}}
            {{g-map-marker
              context
              lat=model.location.position.latitude
              lng=model.location.position.longitude
              title=(concat model.species " caught by " model.user.name)}}
          {{/g-map}}
        </div>
      </div> -->
      <p>{{catch-message model}}</p>
      <dl>
        {{#if model.location.formattedAddress}}
          <dt>Address</dt>
          <dd>{{model.location.formattedAddress}}</dd>
        {{/if}}
        {{#if model.location.place}}
          <dt>Address</dt>
          <dd>{{model.location.formattedAddress}}</dd>
        {{/if}}
        {{#if model.bait}}
          <dt>Bait</dt>
          <dd>{{model.bait}}</dd>
        {{/if}}
        {{#if model.tackle}}
          <dt>Tackle</dt>
          <dd>{{model.tackle}}</dd>
        {{/if}}
        {{#if model.conditions}}
          <dt>Conditions</dt>
          <dd>{{model.conditions}}</dd>
        {{/if}}
        {{#if model.notes}}
          <dt>Notes</dt>
          <dd>{{model.notes}}</dd>
        {{/if}}
      </dl>

    </div>
  </div>

</div>
