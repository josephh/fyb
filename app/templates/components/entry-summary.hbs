<div class="container">
  <div class="row">
    <div class="col-md-6 isotope-item websites">
      <div class="image-gallery-item">
        <span class="thumb-info">
          <span class="thumb-info-wrapper">
            <img src="{{model.images.firstObject.path}}" class="img-responsive" alt="fish image">
            <span class="thumb-info-title">
              <span class="thumb-info-inner">{{model.species}}</span>
              {{#if model.showLengthAndWeight}}
                <span class="thumb-info-type">{{model.weight}} {{model.weightUnits}},
                  {{model.length}} {{model.lengthUnits}}</span>
              {{/if}}
            </span>
          </span>
        </span>
      </div>
    </div>
    <div class="col-md-6">
      <!-- <div class="pull-right mr-lg mb-sm" style="width: 280px;">
        <div id="googlemapsInsideText" class="google-map small mt-none mb-none" style="height: 220px;">
