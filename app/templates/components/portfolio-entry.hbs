<li class="col-md-3 col-sm-6 col-xs-12 isotope-item websites">
  <div class="portfolio-item">
    <span class="thumb-info thumb-info-lighten thumb-info-bottom-info thumb-info-centered-icons">
      <span class="thumb-info-wrapper">
        <img src="{{catch.image}}" class="img-responsive" alt="">
        <span class="thumb-info-title">
          <span class="thumb-info-inner">{{catch.species}}</span>
          <br/>
          <span class="thumb-info-type">
            {{catch.length}} {{catch.lengthUnits}},
            {{catch.weight}} {{catch.weightUnits}}
          </span>
          <span class="thumb-info-type">
            {{catch.location.water}} / {{catch.location.name}} / {{catch.location.country}}
          </span>
        </span>
        <span class="thumb-info-action">
          {{#link-to 'entry' catch.id}}
            <span class="thumb-info-action-icon thumb-info-action-icon-primary"><i class="fa fa-link"></i></span>
          {{/link-to}}
        </span>
      </span>
    </span>
  </div>
</li>
{{yield}}
