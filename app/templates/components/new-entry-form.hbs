
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <section class="panel">
        <div class="panel-body">

          <form class="form-horizontal form-bordered" action="#">
            <div class="form-group">
              {{radio-button-group
                options=waterOptions
                onChange=(action 'waterSelected')
                title='Water Body'
              }}
            </div>
            <div class="form-group">
              {{dropdown-selection
                options=speciesOptions
                title='Fish'
                onChange=(action 'fishTypeSelected')
              }}
            </div>
            <div class="form-group">
              {{radio-button-group
                options=unitLabels
                onChange=(action 'weightUnitSelected')
                title='Weight'
              }}
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-sm-8">
                <div class="row">
                  <div class="col-sm-3">
                    <div class="input-group input-group-icon">
                      {{input classNames='form-control' value=weightMajor placeholder=weightUnits.0.text}}
                      <span class="input-group-addon ">{{weightUnits.0.symbol}}</span>
                    </div>
                  </div>
                  <div class="visible-xs mb-md"></div>
                  <div class="col-sm-3">
                    <div class="input-group input-group-icon">
                      {{input classNames='form-control' value=weightMinor placeholder=weightUnits.1.text}}
                      <span class="input-group-addon ">{{weightUnits.1.symbol}}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              {{radio-button-group
                options=unitLabels
                onChange=(action 'lengthUnitSelected')
                title='Length'
              }}
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-sm-8">
                <div class="row">
                  <div class="col-sm-3">
                    <div class="input-group input-group-icon">
                      {{input classNames='form-control' value=lengthMajor placeholder=lengthUnits.0.text}}
                      <span class="input-group-addon ">{{lengthUnits.0.symbol}}</span>
                    </div>
                  </div>
                  <div class="visible-xs mb-md"></div>
                  <div class="col-sm-3">
                    <div class="input-group input-group-icon">
                      {{input classNames='form-control' value=lengthMinor placeholder=lengthUnits.1.text}}
                      <span class="input-group-addon ">{{lengthUnits.1.symbol}}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="tags-input" class="col-md-3 control-label">Place Tags</label>
              <div class="col-md-6">
                <!-- <input name="tags" id="tags-input" data-role="tagsinput"
                data-tag-class="label label-primary" class="form-control" value="Shepperton,Thames,Penton Hook" /> -->
                {{twitter-typeahead
                  content="shepperton"
                  filterContent=filterContentFn
                  displayKey="propertyToDisplay"
                  valueToken="propertyForValue"
                  footerTemplate=handlebarsFooterTemplate
                  emptyTemplate=handlebarsEmptyTemplate
                  onSelectAction="typeAheadMatch"
                  on-select-without-match="typeAheadNoMatch"
                }}
              </div>
            </div>
          </form>


