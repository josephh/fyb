<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <section class="panel">
        <h2>Record a Catch</h2>
      </section>

      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <section class="panel">
              <div class="panel-body">
                <form class="form-horizontal form-bordered" action="#">
                  <div class="form-group">
                    {{radio-button-group
                      buttons=model.buttons
                      onChange='waterSelected'
                    }}
                  </div>

                  <!-- {{fish-selector
                    options=speciesOptions
                  }}

                  <div class="form-group">
                    <label class="col-md-3 control-label">Weight</label>
                    <div class="col-md-6">
                      <label class="checkbox-inline">
                        <input type="checkbox" id="checkboxWeightMetric" value="metricWeight"> metric
                      </label>
                      <label class="checkbox-inline">
                        <input type="checkbox" id="checkboxWeightImperial" value="imperialWeight"> imperial
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-sm-8">
                      <div class="row">
                        <div class="col-sm-3">
                          <div class="input-group input-group-icon">
                            <input type="text" class="form-control" placeholder="pounds">
                            <span class="input-group-addon ">lbs</span>
                          </div>
                        </div>
                        <div class="visible-xs mb-md"></div>
                        <div class="col-sm-3">
                          <div class="input-group input-group-icon">
                            <input type="text" class="form-control" placeholder="ounces">
                            <span class="input-group-addon ">oz</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-md-3 control-label">Length</label>
                    <div class="col-md-6">
                      <label class="checkbox-inline">
                        <input type="checkbox" id="checkboxLengthMetric" value="metricWeight"> metric
                      </label>
                      <label class="checkbox-inline">
                        <input type="checkbox" id="checkboxLengthImperial" value="imperialWeight"> imperial
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-sm-8">
                      <div class="row">
                        <div class="col-sm-3">
                          <div class="input-group input-group-icon">
                            <input type="text" class="form-control" placeholder="feet">
                            <span class="input-group-addon ">'</span>
                          </div>
                        </div>
                        <div class="visible-xs mb-md"></div>
                        <div class="col-sm-3">
                          <div class="input-group input-group-icon">
                            <input type="text" class="form-control" placeholder="inches">
                            <span class="input-group-addon ">"</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="tags-input" class="col-md-3 control-label">Place Tags</label>
                    <div class="col-md-6">
                      <input name="tags" id="tags-input" data-role="tagsinput"
                      data-tag-class="label label-primary" class="form-control" value="Shepperton,Thames,Penton Hook" />
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-md-3 control-label" for="inputDefault">Address</label>
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="inputAddress">
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-md-3 control-label" for="inputSuccess">Conditions</label>
                    <div class="col-md-6">
                      <select class="form-control mb-md onchange={{action (mut conditions) value="target.value"}}">
                        {{#each conditionsOptions as |conditionsLabel|}}
                          <option value={{conditionsLabel}}>{{conditionsLabel}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-md-3 control-label" for="textareaDefault">Tackle</label>
                    <div class="col-md-6">
                      <textarea class="form-control" rows="3" data-plugin-maxlength maxlength="250"></textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-3 control-label" for="textareaDefault">Notes</label>
                    <div class="col-md-6">
                      <textarea class="form-control" rows="3" data-plugin-maxlength maxlength="250"></textarea>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-md-3 control-label" for="textareaDefault">Upload Image</label>
                    <div class="col-md-6">
                      {{#pl-uploader extensions="jpeg jpg png" for="browse-photos" for-dropzone="app" onfileadd="uploadPhoto" as |queue dropzone|}}
                        {{photo-stream photos=model queue=queue dropzone=dropzone}}
                      {{/pl-uploader}}
                    </div>
                  </div> -->

                </form>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-6">
                  <a href="#" class="btn btn-primary" data-toggle="confirmation" {{action 'addEntry' }}>Add Entry</a>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>
