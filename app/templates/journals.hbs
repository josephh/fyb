<!-- /journals -->
<div class="col-md-4">
  <div class="list-group">
    {{input type="text" class="new-journal" placeholder="New journal"
value=date}}
    <button class="new-journal-button"
    {{action "createJournal"}}
    {{bind-attr disabled=disabled}}>Add</button>
    {{#each model as |journal|}}
      {{#link-to "journal.entries" journal class="list-group-item journal-link"}}
        {{journal.date}} (journal id: {{journal.id}})
        <span class="pointer glyphicon glyphicon-chevron-right"></span>
      {{/link-to}}
    {{/each}}
  </div>
</div>
<div class="col-md-8">
  <div class="list-group">
    {{outlet}}
  </div>
</div>
